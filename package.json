{
  "name": "assistant-desktop-client",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "VoiceAssisnant",
  "author": "KiyotakkkkA",
  "homepage": "https://github.com/KiyotakkkkA/VoiceAssistant",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:services\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:services": "tsc -p tsconfig.services.json -w",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "rimraf dist && vite build && npm run build:services",
    "build:services": "tsc -p tsconfig.services.json",
    "start": "electron .",
    "dist": "npm run build && electron-builder",
    "dist:dir": "npm run build && electron-builder --dir",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "postinstall": "electron-builder install-app-deps"
  },
  "devDependencies": {
    "@types/highlight.js": "^9.12.4",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^9.7.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.41",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "@electron/rebuild": "^3.7.2",
    "better-sqlite3": "^11.10.0",
    "fs-extra": "^11.3.1",
    "highlight.js": "^11.11.1",
    "js-yaml": "^4.1.0",
    "mobx-react-lite": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "unzipper": "^0.12.3",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.kiyotakkkka.voice-assistant",
    "productName": "Voice Assistant",
    "icon": "icon.ico",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "preload.js",
      "src/app/js/**/*",
      "package.json",
      "icon.ico",
      "!src/app/ts/**/*" 
    ],
    "extraResources": [
      
    ],
    "extraFiles": [
      { "from": "init.properties", "to": "init.properties" },
      { "from": "modules", "to": "modules" }
    ],
    "asar": true,
    "asarUnpack": [
      "**/better-sqlite3/**/*",
      "**/*.node",
      "modules/**",
      "init.properties"
    ],
    "npmRebuild": true,
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": ["x64"]
        }
      ],
      "icon": "icon.ico",
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false,
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": [
        { "target": "dmg", "arch": ["x64", "arm64"] }
      ]
    },
    "linux": {
      "target": [
        { "target": "AppImage", "arch": ["x64"] }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
