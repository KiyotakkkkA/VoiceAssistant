{
  "name": "assistant-desktop-client",
  "version": "1.0.0",
  "type": "module",
  "main": "main.js",
  "description": "Electron + React + TypeScript + Tailwind starter",
  "scripts": {
    "dev": "cross-env NODE_ENV=development concurrently \"npm:dev:services\" \"npm:dev:renderer\" \"npm:dev:electron\"",
    "dev:services": "tsc -p tsconfig.services.json -w",
    "dev:renderer": "vite",
    "dev:electron": "wait-on tcp:5173 && electron .",
    "build": "rimraf dist && vite build && npm run build:services",
    "build:services": "tsc -p tsconfig.services.json",
    "start": "electron .",
    "start:prod": "cross-env NODE_ENV=production electron .",
    "lint": "eslint . --ext .js,.ts,.tsx"
  },
  "devDependencies": {
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.14.10",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^37.2.6",
    "electron-builder": "^26.0.12",
    "esbuild-plugin-tsconfig-paths": "^1.0.1",
    "eslint": "^9.7.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.4.41",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vite": "^5.3.5",
    "wait-on": "^7.2.0"
  },
  "dependencies": {
    "dotenv": "^16.4.5",
    "fs-extra": "^11.3.1",
    "js-yaml": "^4.1.0",
    "mobx-react-lite": "^4.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "ws": "^8.18.3"
  },
  "build": {
    "appId": "com.kiyotakkkka.voice-assistant",
    "productName": "Voice Assistant",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "src/app/js/**/*",
      "!resources/**",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "resources",
        "to": "resources"
      }
    ],
    "win": {
      "target": [
        {
          "target": "portable",
          "arch": [
            "x64"
          ]
        }
      ],
      "forceCodeSigning": false,
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
